# will fetch new pif apk if connected to internet
# if pif.apk version from server is same as the last fetched then it wont get updated

# Use seclabeled service instead so it runs without root and su
service pif_auto_updater /system/bin/pif-updater
    class main
    seclabel u:r:init:s0
	user root
	group root system
    disabled
    oneshot

on property:sys.boot_completed=1 && property:persist.sys.oemports10t.pif.autoupdate=true
    start pif_auto_updater
